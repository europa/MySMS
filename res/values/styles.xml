<resources>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="title_left_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:minWidth">50dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/title_left_btn_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_right_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:padding">5dip</item>
        <item name="android:minWidth">50dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/title_btn_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_new_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:padding">5dip</item>
        <item name="android:minWidth">50dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_center_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>